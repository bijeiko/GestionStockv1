<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gbernardeau.gestionstock.IHM.MainActivity">

    <LinearLayout
        android:layout_width="1264dp"
        android:layout_height="647dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="9dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/ToutLesArticles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.34"
                    android:text="Tout les articles" />
            </LinearLayout>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/CreateFiches"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Créer une fiche" />

            </LinearLayout>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ToutesLesFiches"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Toutes les fiches" />

            </LinearLayout>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1276dp"
                android:layout_height="92dp"
                android:orientation="vertical"
                android:weightSum="1">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/drawable">

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.08"
                            android:text="ID"
                            android:textAlignment="center"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="378dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/drawable"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Famille"
                            android:layout_width="284dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.02"
                            android:text="Famille"
                            android:textAlignment="center"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="289dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/drawable"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Emplacement"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.02"
                            android:text="Emplacement"
                            android:textAlignment="center"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/drawable"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Etat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.02"
                            android:text="État"
                            android:textAlignment="center"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="284dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/drawable"
                        android:layout_weight="0.60">

                        <TextView
                            android:id="@+id/DateEntree"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.02"
                            android:text="Date d'entrée"
                            android:textAlignment="center"
                            android:textSize="30dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/ListViewAccueil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="11.03"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="true"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
